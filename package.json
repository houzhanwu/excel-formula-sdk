{
  "name": "excel-formula-sdk",
  "version": "0.0.8",
  "description": "Excel 公式解析引擎（公式编辑器、公式计算）",
  "main": "./min/formula-sdk.js",
  "repository": {
    "url": "git@git.yonyou.com:e-invoice-FE/FormulaTextArea.git",
    "type": "git"
  },
  "author": "zhangyef@yonyou.com",
  "license": "MIT",
  "Keywords": ["excel", "formula", "sdk", "monaco"],
  "scripts": {
    "test": "node ./test/require-alias/loader.js --colors --config ./test/.mocharc.js",
    "coverage": "npx karma start karma.conf.js",
    "start": "webpack-dev-server --config build/webpack.config.dev.js",
    "build:dev": "webpack --config build/webpack.config.dist.dev.js",
    "build:min": "webpack --config build/webpack.config.dist.min.js",
    "build-all": "npm run build:dev && npm run build:min",
    "publish": "npm publish"
  },
  "dependencies": {
    "@formulajs/formulajs": "^2.4.3",
    "antlr4": "^4.8.0",
    "chroma-js": "^2.1.0",
    "core-js-pure": "^3.6.5",
    "lodash": "^4.17.20",
    "lodash.debounce": "^4.0.8",
    "monaco-editor-core": "^0.20.0",
    "punycode": "^2.1.1"
  },
  "peerDependencies": {
    "monaco-editor-core": "^0.20.0"
  },
  "devDependencies": {
    "bufferutil": "^4.0.1",
    "cd": "^0.3.3",
    "chai": "^4.2.0",
    "coverage-istanbul-loader": "^3.0.4",
    "cz-conventional-changelog": "^3.3.0",
    "gulp": "^4.0.2",
    "gulp-bump": "^3.2.0",
    "gulp-rename": "^2.0.0",
    "karma": "^5.1.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sourcemap-loader": "^0.3.8",
    "karma-webpack": "^4.0.2",
    "mocha": "^8.1.1",
    "mochawesome": "^6.1.1",
    "nyc": "^15.1.0",
    "puppeteer": "^5.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.2",
    "utf-8-validate": "^5.0.2",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "feat": {
          "description": "一项新的特性",
          "title": "Features"
        },
        "daily": {
          "description": "日常变更",
          "title": "Daily Development"
        },
        "fix": {
          "description": "BUG 修复",
          "title": "Bug Fixes"
        },
        "docs": {
          "description": "只修改了文档",
          "title": "Documentation"
        },
        "style": {
          "description": "代码样式调整 (空白符, 格式化, 补充分号等)",
          "title": "Styles"
        },
        "refactor": {
          "description": "代码重构调整，既没有修复 BUG，也没有补充新功能",
          "title": "Code Refactoring"
        },
        "perf": {
          "description": "对性能改进的代码",
          "title": "Performance Improvements"
        },
        "test": {
          "description": "补充测试用例、调整现有测试用例",
          "title": "Tests"
        },
        "build": {
          "description": "修改构建过程、修改外部依赖 (可能的作用域: gulp, broccoli, npm)",
          "title": "Builds"
        },
        "chore": {
          "description": "杂项，其他变更（不影响 src、test 目录）",
          "title": "Chores"
        }
      }
    }
  }
}
