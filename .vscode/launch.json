  "version": "0.2.0",
  "configurations": [{
      "type": "node",
      "request": "launch",
      "name": "启动单元测试",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${workspaceFolder}/test"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "调试当前文件",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "${file}"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "调试 ANTLR4 grammar",
      "type": "antlr-debug",
      "request": "launch",
      "input": "test/input/formula1.txt",
      "grammar": "src/grammar/ReportFormulaParser.g4",
      // "actionFile": "grammars/exampleActions.js",
      "startRule": "formulaExpr",
      "printParseTree": true,
      "visualParseTree": true
  }
  ]
}